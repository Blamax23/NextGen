<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <meta name="description" content="Site vitrine avec admin pour présenter l'association Next Gen qui a pour but de récupérer des fonds en organisant des tournois afin d'offrir un accès au sport aux plus démunis" />
    <meta name="keywords" content="next gen, association, football, foot, sport, lyon, sports, sport association, association sportive, association foot, next gen sports association" />
    <meta name="author" content="Maxime Blanc" />
    <title>@ViewData["Title"]</title>  
    <link rel="icon" href="~/src/favicon.ico" type="image/x-icon" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NextGen.Front.styles.css" asp-append-version="true" />
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script type="application/ld+json">
    {
        "\u0040context": "https://schema.org",
        "\u0040type": "Association",
        "name": "Next Gen Sports Association",
        "url": "https://dictoncaucasien.fr",
        "logo": "https://dictoncaucasien.fr/src/LOGO%20COULEURS/LOGO%20NEXTGEN%20couleurs.png",
        "description": "Site vitrine avec admin pour présenter l'association Next Gen qui a pour but de récupérer des fonds en organisant des tournois afin d'offrir un accès au sport aux plus démunis",
        "foundingDate": "2024-11-20",
        "contactPoint": {
            "\u0040type": "ContactPoint",
            "telephone": "+33-6-47-52-63-22",
            "contactType": "Contact Association",
            "email": "Maxime.blanc2364@gmail.com",
            "availableLanguage": ["French"],
            "areaServed": "France"
        },
        "address": {
            "\u0040type": "PostalAddress",
            "streetAddress": "7 Rue Jean Marie Leclair",
            "addressLocality": "Ville",
            "postalCode": "69009"
        },
        "sameAs": [
            "https://www.instagram.com/_maxblc_/",
            "https://www.linkedin.com/in/maxime-blanc-aa3565227/"
        ]
    }
    </script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light box-shadow mb-3">
            <div class="logo">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" title="Logo de l'association"><img src="~/src/LOGO DECLINAISONS/DECLINAISONS COULEURS.png" alt="Logo décliné de Next Gen en couleurs" title="Logo de Next Gen"/></a>
            </div>
            @* <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
            aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button> *@
            <div class="elementsRedirect d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" title="Lien vers la page d'accueil">Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Actualite" asp-action="Index" title="Lien vers la page d'actualités">Actualités</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Question" asp-action="Index" title="Lien vers la page des questions">FAQ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Contact" asp-action="Index" title="Lien vers la page de contact">Contact</a>
                    </li>
                    <li>
                        <a class="nav-link" asp-area="" asp-controller="Login" asp-action="Connect" title="Lien vers la page de connexion"><i class="bi bi-person-circle iconUsr" style="color: rgb(242, 241, 3);"></i></a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container-head-footer">
            <!--Liste des pages possibles-->
            <ul class="list-inline">
                <li class="list-inline-item"><a asp-area="" asp-controller="Home" asp-action="Index" title="Lien vers la page d'accueil">Home</a></li>
                <li class="list-inline-item"><a asp-area="" asp-controller="Actualite" asp-action="Index" title="Lien vers la page d'actualités">Actualités</a></li>
                <li class="list-inline-item"><a asp-area="" asp-controller="Question" asp-action="Index" title="Lien vers la page de questions">FAQ</a></li>
                <li class="list-inline-item"><a asp-area="" asp-controller="Contact" asp-action="Index" title="Lien vers la page de contact">Contact</a></li>
            </ul>
            <ul class="list-inline">
                <li class="list-inline-item">Suivez-nous :</li>
                <li class="list-inline-item"><a href="https://www.instagram.com/nextgensportassociation_" target="_blank" title="Lien vers l'instagram de l'association"><i class="bi bi-instagram"></i></a></li>
                <li class="list-inline-item"><a href="https://www.tiktok.com/@@nextgensportasso6" target="_blank" title="Lien vers le tiktok de l'association"><i class="bi bi-tiktok"></i></a></li>
                <li class="list-inline-item"><a href="https://www.snapchat.com/add/nextgensport69" target="_blank" title="Lien vers le snapchat de l'association"><i class="bi bi-snapchat"></i></a></li>
            </ul>
        </div>
        <div class="container-footer">
            &copy; 2024 - NextGen Sports Association
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
